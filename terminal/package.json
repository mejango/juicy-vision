{
  "name": "payterm-terminal",
  "version": "1.0.0",
  "description": "PayTerm - Juicebox Payment Terminal for Raspberry Pi",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:ui\" \"npm run dev:electron\"",
    "dev:ui": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "vite build && electron-builder",
    "build:ui": "vite build",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "nfc:start": "node nfc/service.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "electron-store": "^8.1.0",
    "qrcode": "^1.5.3",
    "socket.io-client": "^4.7.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/qrcode": "^1.5.5",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.juicebox.payterm",
    "productName": "PayTerm",
    "directories": {
      "output": "dist"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["armv7l", "arm64", "x64"]
        }
      ],
      "category": "Finance"
    },
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.finance"
    }
  }
}
