{
  "name": "juicy-vision-backend",
  "version": "0.1.0",
  "tasks": {
    "dev": "deno run --watch --allow-net --allow-env --allow-read main.ts",
    "start": "deno run --allow-net --allow-env --allow-read main.ts",
    "test": "deno test --allow-net --allow-env --allow-read",
    "train": "deno run --allow-net --allow-env --allow-read --allow-write scripts/training/run.ts"
  },
  "imports": {
    "hono": "npm:hono@4",
    "hono/": "npm:hono@4/",
    "@hono/zod-validator": "npm:@hono/zod-validator@0.4.3",
    "zod": "npm:zod@3",
    "jose": "npm:jose@5",
    "viem": "npm:viem@2",
    "viem/": "npm:viem@2/",
    "@anthropic-ai/sdk": "npm:@anthropic-ai/sdk@0.39",
    "postgres": "https://deno.land/x/postgres@v0.19.3/mod.ts",
    "bcrypt": "https://deno.land/x/bcrypt@v0.4.1/mod.ts",
    "std/": "https://deno.land/std@0.224.0/"
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window", "deno.unstable"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true
  }
}
