{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "startCommand": "TESTNET_MODE=true deno run --allow-net --allow-env --allow-read main.ts",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30
  }
}
